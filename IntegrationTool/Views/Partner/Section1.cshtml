    Layout = "~/Views/Shared/_Partner.cshtml";
}

import React from "react";


@section JavaScript
{
    <script type="text/javascript" src="@Url.Content("/js/Section1.js")"></script>
}
<div><h2>Partner 1</h2></div>

<h1>Section1: Partner1, P0123 ,Active</h1>

<form class="form-horizontal" >
