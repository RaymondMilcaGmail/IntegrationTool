
@{
    ViewData["Title"] = "Section1";
    Layout = "~/Views/Shared/_Partner.cshtml";
}


@section JavaScript
{
    <script type="text/javascript" src="@Url.Content("/js/Section1.js")"></script>
    <script>
        $("#sidenav li").each(function () {
            if ($(this).data("link") == "partner_list") {
                $(this).addClass("active");
            }
            else {
                $(this).removeClass("active");
            }
        });
    </script>
}
<h1 class="page-header">
    Partner 1
    <p><small>Section 1: Partner1, P0123 ,Active</small></p>
</h1>
<form class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-sm-3" for="email">Auxiliary Product:</label>
        <div class="col-sm-5">
            <label class="lblData">Bills Payment</label>
        </div>
        <div class="col-sm-4">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-3" for="billerName">Biller Name:</label>
        <div class="col-sm-5">
            <input type="text" name="billerName" class="form-control forUpdatedis txtData" value="Partner 1">
        </div>
        <div class="col-sm-4">
            <div class="btnGroup">
                <button type="button" class="btnEdit forView btn-block btn btn-info"><span class="glyphicon glyphicon-edit mr-5"></span>Edit</button>
                <button type="button" class="btnSave forUpdate btn btn-primary"><span class="glyphicon glyphicon-floppy-saved mr-5"></span>Save</button>
                <button type="button" class="btnCancel forUpdate btn btn-danger"><span class="glyphicon glyphicon glyphicon-remove mr-5"></span>Edit</button>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-3" for="accountingCode">Accounting Code :</label>
        <div class="col-sm-5">
            <input type="text" name="accountingCode" class="form-control forUpdatedis txtData" value="P0123">
        </div>
        <div class="col-sm-4">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-3" for="status">Status :</label>
        <div class="col-sm-5">
            <select name="status" class="form-control forUpdatedis"><option selected="selected">Active</option><option selected="selected">Inactive</option></select>
        </div>
        <div class="col-sm-4">
            <div class="btnGroup">
                <button type="button" class="btnEdit forView btn-block btn btn-info"><span class="glyphicon glyphicon-edit mr-5"></span>Edit</button>
                <button type="button" class="btnSave forUpdate btn btn-primary"><span class="glyphicon glyphicon-floppy-saved mr-5"></span>Save</button>
                <button type="button" class="btnCancel forUpdate btn btn-danger"><span class="glyphicon glyphicon glyphicon-remove mr-5"></span>Edit</button>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-3" for="batch">Batch</label>
        <div class="col-sm-5">
            <input type="text" name="batch" class="form-control forUpdatedis txtData" value="Partner 1">
        </div>
        <div class="col-sm-4">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-3" for="receiptName">Partner Name to appear on receipt:</label>
        <div class="col-sm-5">
            <input type="text" name="receiptName" class="form-control forUpdatedis txtData" value="PARTNER1">
        </div>
        <div class="col-sm-4">
            <div class="btnGroup">
                <button type="button" class="btnEdit forView btn-block btn btn-info"><span class="glyphicon glyphicon-edit mr-5"></span>Edit</button>
                <button type="button" class="btnSave forUpdate btn btn-primary"><span class="glyphicon glyphicon-floppy-saved mr-5"></span>Save</button>
                <button type="button" class="btnCancel forUpdate btn btn-danger"><span class="glyphicon glyphicon glyphicon-remove mr-5"></span>Edit</button>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="minAmount">Minimum Amount :</label>
        <div class="col-sm-5">
            <input type="text" name="minAmount" class="form-control forUpdatedis txtData" value="0">
        </div>
        <div class="col-sm-4">
            <div class="btnGroup">
                <button type="button" class="btnEdit forView btn-block btn btn-info"><span class="glyphicon glyphicon-edit mr-5"></span>Edit</button>
                <button type="button" class="btnSave forUpdate btn btn-primary"><span class="glyphicon glyphicon-floppy-saved mr-5"></span>Save</button>
                <button type="button" class="btnCancel forUpdate btn btn-danger"><span class="glyphicon glyphicon glyphicon-remove mr-5"></span>Edit</button>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3" for="maxAmount">Maximum Amount :</label>
        <div class="col-sm-5">
            <input type="text" name="maxAmount" class="form-control forUpdatedis txtData" value="100">
        </div>
        <div class="col-sm-4">
            <div class="btnGroup">
                <button type="button" class="btnEdit forView btn-block btn btn-info"><span class="glyphicon glyphicon-edit mr-5"></span>Edit</button>
                <button type="button" class="btnSave forUpdate btn btn-primary"><span class="glyphicon glyphicon-floppy-saved mr-5"></span>Save</button>
                <button type="button" class="btnCancel forUpdate btn btn-danger"><span class="glyphicon glyphicon glyphicon-remove mr-5"></span>Edit</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-5">
            <a class="btn btn-success btn-block" href="/Partner/Section2"><span class="mr-5 glyphicon glyphicon-ok-circle"></span>Submit For Approval</a>
        </div>
        <div class="col-md-3"></div>
    </div>
</form>
